</div>


<div class="contianer">
    <div class="row mt-10">
        <div class="col-xl" style="width: 100% ">
            <div class="card card-body">
                <% include ./partials/messages %>
                <form id="form" action="/addGame" method="POST">
                    <fieldset background-color="black">
                        <legend>Add Game</legend>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="title" class="form-control" id="title" name="title" placeholder="Enter Game Title">
                        </div>
                        <div class="form-group">
                            <label for="discription">Discription:</label>
                            <input type="discription" class="form-control" id="discription" name="discription" placeholder="Enter Discription">
                        </div>
                        <button type="submit" class="btn btn-dark">Create</button>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <ul class="list-group" id="display">

            </ul>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
